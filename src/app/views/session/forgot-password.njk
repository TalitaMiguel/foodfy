{% extends "layouts/session.njk" %}

{% block content %}

    <section class="password">
        <form method="POST" action="/admin/users/forgot-password">
            <h1>Esqueceu a senha?</h1>
            <div class="fields">
                <div class="item">
                    <h3>Email</h3>
                    <div class="input">
                        <input 
                            type="email"
                            name="email"
                            placeholder="Digite seu email para recuperar sua senha"
                            value="{{user.email}}"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>
            </div>
            <div class="btnRecuperar">
                <button type="submit" class="btnSalvar">Recuperar</button>
            </div>            
        </form>
    </section>

{% endblock content %}

