<div class="item">
    <h3>Email</h3>
    <div class="input">
        <input 
            type="email"
            name="email"
            placeholder="Digite seu email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <h3>Nova senha</h3>
    <div>
        <input 
            type="password"
            name="password"
            placeholder="Digite sua nova senha"
        >
    </div>
</div>

<div class="item">
    <h3>Repetir senha</h3>
    <div>
        <input 
            type="password"
            name="passwordRepeat"
            placeholder="Repita a nova senha"
        >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">